extends auth

block auth
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Please Sign input
          .panel-body
            form(action="/users/session", method="post", role="form")
              input(type='hidden', name='_csrf', value="#{csrf_token}")
              fieldset
                .form-group
                  input.form-control(type="email", placeholder="email", name="email", required autofocus)
                .form-group
                  input.form-control(type="password", placeholder="Password", name="password", required)
                button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
